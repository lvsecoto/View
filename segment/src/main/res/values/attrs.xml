<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="segment">

        <!--选项文本-->
        <attr name="entry" format="reference" />

        <!--文本大小-->
        <attr name="textSize" format="dimension" />

        <!--圆角半径-->
        <attr name="round" format="dimension" />

        <!--边框线条宽度-->
        <attr name="borderWidth" format="dimension" />

        <!--文本到边框距离，水平方向-->
        <attr name="paddingX" format="dimension" />

        <!--文本到边框距离，垂直方向-->
        <attr name="paddingY" format="dimension" />

        <!--高亮类型-->
        <attr name="highlightStyle" format="enum">

            <!--默认，矩形-->
            <enum name="NORMAL" value="0"/>

            <!--圆角矩形-->
            <enum name="ROUND" value="1"/>

            <!--圆形-->
            <enum name="CIRCLE" value="2"/>

        </attr>

        <!--颜色-->
        <attr name="color" format="color" />

        <!--边框颜色-->
        <attr name="borderColor" format="color" />

        <!--背景颜色-->
        <attr name="backgroundColor" format="color" />

        <!--分割线颜色-->
        <attr name="dividerColor" format="color" />

        <!--文本颜色-->
        <attr name="textColor" format="color" />

        <!--高亮颜色-->
        <attr name="highlightColor" format="color" />

        <!--高亮文本颜色-->
        <attr name="highlightTextColor" format="color" />

        <!--选项颜色-->
        <attr name="entryColor" format="reference"/>

        <!--设置哪一个绘制部分要跟随macro color-->
        <attr name="macroColor">
            <flag name="border" value="1" />
            <flag name="background" value="2" />
            <flag name="divider" value="4" />
            <flag name="text" value="8" />
            <flag name="highlight" value="16" />
            <flag name="highlight_text" value="32" />
        </attr>

        <!--分割线高度百分比，范围0 - 1，最高为Segment高度-->
        <attr name="dividerScale" format="fraction" />

    </declare-styleable>
</resources>