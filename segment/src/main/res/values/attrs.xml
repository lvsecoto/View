<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="segment">

        <attr name="round" format="dimension" />

        <!--Segment text size-->
        <attr name="textSize" format="dimension" />

        <!--Stroke width of segment border-->
        <attr name="borderWidth" format="dimension" />

        <!--default segment color-->
        <attr name="color" format="color" />

        <!--Horizontal padding between text and segment border-->
        <attr name="paddingX" format="dimension" />

        <!--Vertical padding between text and segment border-->
        <attr name="paddingY" format="dimension" />

        <attr name="entry" format="reference" />

        <attr name="borderColor" format="color" />

        <attr name="backgroundColor" format="color" />

        <attr name="dividerColor" format="color" />

        <attr name="textColor" format="color" />

        <attr name="highlightTextColor" format="color" />

        <attr name="highlightColor" format="color" />

        <attr name="highlightStyle" format="enum">
            <enum name="NORMAL" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="CIRCLE" value="2"/>
        </attr>

        <attr name="entryColor" format="reference"/>

        <!--设置哪一个绘制部分要跟随macro color-->
        <attr name="macroColor">
            <flag name="border" value="1" />
            <flag name="background" value="2" />
            <flag name="divider" value="4" />
            <flag name="text" value="8" />
            <flag name="highlight" value="16" />
            <flag name="highlight_text" value="32" />
        </attr>

    </declare-styleable>
</resources>